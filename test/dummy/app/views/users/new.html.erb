<h2>Register</h2>

<%= form_for @user do |f| %>
  <p>
    <%= f.label      :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>    
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>    
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>    
  <p>
    
    <%= f.check_box :admin %> <%= f.label :admin, 'Product Administrator' %>
  </p>   
  <p>
    <%= f.submit  %>
  </p>       
<% end %>
  